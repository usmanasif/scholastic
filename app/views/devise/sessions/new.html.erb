
<div class="account-container stacked">
<div class="content clearfix">
  <h1>Sign In</h1>    
    
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="login-fields">
    <p>Sign in using your registered account:</p>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email,autocomplete: "off", autofocus: true, :class => 'login username-field', :style => 'height:40px; width:100%', :placeholder => 'Email', :required => true %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", :class => 'login password-field', :style => 'height:40px; width:100%', :placeholder => 'Password', :required => true %>
    </div>

  </div> 
  <div class="login-actions">
    <% if devise_mapping.rememberable? -%>
      <div style="margin-top:20px;"></div>
      <div class="login-checkbox">
        <label><%= f.check_box :remember_me, :class => 'field login-checkbox' %> Keep me signed in</label>
      </div>
    <% end -%>
  
    <%= f.submit "Sign in", :class => 'button btn btn-warning btn-large' %>
  </div>


<% end %>

<%= render "devise/shared/links" %>
</div>


</div>